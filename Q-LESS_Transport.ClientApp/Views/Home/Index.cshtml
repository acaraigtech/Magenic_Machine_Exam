@model Q_LESS_Transport.ClientApp.Models.CardViewModel

@{
    ViewData["Title"] = "Index";
}

<h4>Train Station Platform Gate</h4>
<hr />
<form asp-controller="Home" asp-action="Index" method="post" role="form">
    <div class="row">
        <div class="form-group">
            @Html.Label("Card ID")
            <select asp-for="CardId"
                    class="form-control"
                    asp-items="@(new SelectList(ViewBag.CardSelectList.Items, "Id", "Id"))">
            </select>
        </div>
    </div>
    <div class="form-group">
        <input id="Submit" class="btn btn-success" type="submit" value="Tap To Exit" />
    </div>
</form>

@if (ViewBag.IsSuccess)
{
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Thank you for riding with us!</strong> Have a nice day!.<br />
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
}




